@model Project_3.Models.Product

@{
    ViewBag.Title = "Upsert";
}

<h2>Add Product</h2>

@using (Html.BeginForm("Upsert", "Products", FormMethod.Post))
{
    @Html.TextBoxFor(pr => pr.ProductCode, new { @class = "form-control", placeholder = "Product Code" })
    @Html.TextBoxFor(pr => pr.Description, new { @class = "form-control", placeholder = "Description" })
    @Html.TextBoxFor(pr => pr.UnitPrice, new { @class = "form-control", placeholder = "Unit Price" })
    @Html.TextBoxFor(pr => pr.OnHandQuantity, new { @class = "form-control", placeholder = "On Hand Quantity" })


    <input type="submit" value="submit" class="btn btn-info" />
    <input type="button" value="Delete" class="btn btn-danger" onclick="apiHandler.DELETE('/Products/Delete/@Model.ProductCode');" />
}


